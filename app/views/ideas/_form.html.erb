<%= simple_form_for(@idea) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :body %>
    <%= f.input :published,{label:"公開"} %>
    <%= f.input :likes %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

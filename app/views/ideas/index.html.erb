<p id="notice"><%= notice %></p>

<h1>Listing Ideas</h1>

<%= link_to 'New Idea', new_idea_path, :class => "post" %>

<% @ideas.each do |idea| %>
    <%= idea.body %>
    <% idea.labels.each do |label|  %>
      <%= link_to label.title, label_path(label)  %>
    <% end %>
    <%= link_to 'Show', idea %></td>
    <%= link_to 'Edit', edit_idea_path(idea) %></td>
    <%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

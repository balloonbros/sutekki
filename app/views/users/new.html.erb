<h1>logo</h1>
<h2>Sign up to Sutekki</h2>

<div>
  <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>
<br>
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control' %>
<br>
    <%= f.label :email %><br>
    <%= f.email_field :email, class: 'form-control' %>
<br>
    <%= f.label :password %><br>
    <%= f.password_field :password, class: 'form-control' %>
<br>
    <%= f.submit "Create my account" %>
  <% end %>
</div>

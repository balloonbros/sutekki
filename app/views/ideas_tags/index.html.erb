<p id="notice"><%= notice %></p>

<h1>Listing Ideas Tags</h1>

<table>
  <thead>
    <tr>
      <th>Idea</th>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas_tags.each do |ideas_tag| %>
      <tr>
        <td><%= ideas_tag.idea_id %></td>
        <td><%= ideas_tag.tag_id %></td>
        <td><%= link_to 'Show', ideas_tag %></td>
        <td><%= link_to 'Edit', edit_ideas_tag_path(ideas_tag) %></td>
        <td><%= link_to 'Destroy', ideas_tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

